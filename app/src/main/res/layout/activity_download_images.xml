<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DownloadImages">

    <TextView
        android:id="@+id/jobCountView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/image1"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Job Count: 0"
        android:textSize="20sp"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/image1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Image 1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/image2"
        app:layout_constraintBottom_toTopOf="@+id/image3"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/image1"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/image2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Image 2"
        app:layout_constraintStart_toEndOf="@+id/image1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/image4"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/image2"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/image3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Image 3"
        app:layout_constraintTop_toBottomOf="@+id/image1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/image4"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/image3"/>

        <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/image4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Image 4"
        app:layout_constraintStart_toEndOf="@+id/image3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image2"
            android:background="@drawable/image4"/>

    <androidx.core.widget.ContentLoadingProgressBar
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="70dp"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/progress_indeterminate" />




</androidx.constraintlayout.widget.ConstraintLayout>